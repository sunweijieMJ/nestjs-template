{
  "name": "nestjs-boilerplate",
  "version": "1.2.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "typeorm": "env-cmd ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- --dataSource=src/infrastructure/database/data-source.ts migration:generate",
    "postmigration:generate": "npm run lint -- --fix",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:run": "npm run typeorm -- --dataSource=src/infrastructure/database/data-source.ts migration:run",
    "migration:run:prod": "node ./node_modules/typeorm/cli.js --dataSource=dist/infrastructure/database/data-source.js migration:run",
    "migration:revert": "npm run typeorm -- --dataSource=src/infrastructure/database/data-source.ts migration:revert",
    "schema:drop": "npm run typeorm -- --dataSource=src/infrastructure/database/data-source.ts schema:drop",
    "seed:create:relational": "hygen seeds create-relational",
    "generate:resource:relational": "hygen generate relational-resource",
    "postgenerate:resource:relational": "npm run lint -- --fix",
    "add:property:to-relational": "hygen property add-to-relational",
    "postadd:property:to-relational": "npm run lint -- --fix",
    "app:config": "ts-node -r tsconfig-paths/register ./.install-scripts/index.ts && npm install && npm run lint -- --fix",
    "seed:run:relational": "ts-node -r tsconfig-paths/register ./src/infrastructure/database/seeds/relational/run-seed.ts",
    "seed:run:prod": "node ./dist/infrastructure/database/seeds/relational/run-seed.js",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:swc": "nest start -b swc -w",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:md": "markdownlint-cli2",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "cspell": "cspell \"src/**/*.ts\" \"test/**/*.ts\"",
    "commit": "czg",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "env-cmd jest --config ./test/jest-e2e.json",
    "docker:dev": "docker compose -f docker/docker-compose.base.yaml -f docker/docker-compose.redis.yaml -f docker/docker-compose.postgres.yaml -f docker/docker-compose.dev.yaml up --build",
    "docker:test": "docker compose -f docker/docker-compose.base.yaml -f docker/docker-compose.redis.yaml -f docker/docker-compose.postgres.yaml -f docker/docker-compose.test.yaml up --build",
    "docker:ci": "docker compose -f docker/docker-compose.base.yaml -f docker/docker-compose.redis.yaml -f docker/docker-compose.postgres.yaml -f docker/docker-compose.ci.yaml up --build --abort-on-container-exit",
    "docker:prod": "docker compose -f docker/docker-compose.base.yaml -f docker/docker-compose.redis.yaml -f docker/docker-compose.postgres.yaml -f docker/docker-compose.prod.yaml up -d --build",
    "docker:down": "docker compose -f docker/docker-compose.base.yaml -f docker/docker-compose.redis.yaml -f docker/docker-compose.postgres.yaml down",
    "docker:clean": "docker compose -f docker/docker-compose.base.yaml -f docker/docker-compose.redis.yaml -f docker/docker-compose.postgres.yaml down -v --remove-orphans",
    "prepare": "is-ci || husky",
    "release": "release-it"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ],
    "*.{ts,js,json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "@alicloud/dysmsapi20170525": "^4.3.0",
    "@alicloud/openapi-client": "^0.4.15",
    "@aws-sdk/client-s3": "3.864.0",
    "@aws-sdk/s3-request-presigner": "3.864.0",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "11.1.6",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.6",
    "@nestjs/jwt": "11.0.1",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.6",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "11.0.0",
    "@types/multer-s3": "3.0.3",
    "@types/prompts": "2.4.9",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "bcryptjs": "3.0.2",
    "bullmq": "^5.65.1",
    "cache-manager": "^7.2.7",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "dotenv": "17.2.2",
    "handlebars": "4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "ms": "2.1.3",
    "multer": "2.0.2",
    "multer-s3": "3.0.1",
    "nestjs-i18n": "10.5.1",
    "nestjs-pino": "^4.5.0",
    "nodemailer": "7.0.7",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pg": "8.16.3",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "redis": "^5.10.0",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2",
    "source-map-support": "0.5.21",
    "swagger-ui-express": "5.0.1",
    "typeorm": "0.3.27"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/format": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.6",
    "@release-it/conventional-changelog": "10.0.2",
    "@swc/cli": "0.7.8",
    "@swc/core": "1.13.4",
    "@types/bcryptjs": "3.0.0",
    "@types/express": "5.0.5",
    "@types/jest": "30.0.0",
    "@types/ms": "2.1.0",
    "@types/multer": "2.0.0",
    "@types/node": "22.19.1",
    "@types/nodemailer": "^7.0.4",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "chalk": "^5.6.2",
    "cspell": "^9.4.0",
    "cz-git": "^1.12.0",
    "czg": "^1.12.0",
    "env-cmd": "10.1.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "^16.0.0",
    "husky": "9.1.7",
    "hygen": "6.2.11",
    "is-ci": "4.1.0",
    "jest": "30.1.3",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "3.6.2",
    "prompts": "2.4.2",
    "release-it": "19.0.5",
    "supertest": "7.1.4",
    "ts-jest": "29.4.5",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tslib": "2.8.1",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.ts",
      "!**/*.dto.ts",
      "!**/*.entity.ts",
      "!**/*.schema.ts",
      "!**/index.ts",
      "!**/main.ts",
      "!**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/",
      "/test/",
      ".mock.ts",
      ".stub.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "chore(deps)",
              "section": "Dependency Upgrades"
            },
            {
              "type": "fix(deps)",
              "section": "Dependency Upgrades"
            },
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance Improvements"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "refactor",
              "section": "Code Refactoring"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            }
          ]
        }
      }
    }
  }
}
